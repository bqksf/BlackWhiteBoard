/* pages/drawBoard/drawBoard.wxss */

.main {
    height: 100vh;
    position: relative;
}

.main scroll-view {
    height: 100vh;
}

.main input {
    position: absolute;
    width: 200rpx;
    border-bottom: dashed 1px rgb(179, 179, 179);
    /* display: none; */
}

.drawCanvas {
    width: 2000px;
    height: 2000px;
    background-color: white;
    /*  rgb(65, 65, 65); */
    /* 1rpx = 0.5px */
}

.toolsBar {
    position: absolute;
    border-radius: 10px;
    left: -15vw;
    top: 50%;
    margin-top: -25vh;
    height: 50vh;
    /* 修改height 一起改margintop */
    width: 30vw;
    box-sizing: border-box;
    background-color: rgba(223, 223, 223, 0.8);
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    padding-left: 15vw;
    display: flex;
    flex-direction: column;
    align-items: space-around;
    text-align: center;
}

.toolsBar button {
    flex: 1;
    padding: 0;
    /* margin-bottom: 15rpx; */
    border-style: none;
    width: 35px;
    height: 35px;
    align-items: center;
    display: flex;
    box-sizing: border-box;
}

.toolsBar button cover-image {
    /* background-color: black; */
    width: 35px;
    height: 35px;
}

.select_icon {
    background-size: cover;
    background-image: url("data:image/svg+xml;base64,");
}